{
  "manifest_version": 2,
  "name": "Online Boyfriend",
  "version": "1.0",
  "description": "Creates a digital boyfriend for you to chat with while browsing. 60% British, 30% Hairy, 10% Style.
",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs"],
  "browser_action": {
    "default_icon": "images/harry.png",
    "default_popup": "sketch/index.html",
    "default_title": "A popup will appear!"
  }
}
